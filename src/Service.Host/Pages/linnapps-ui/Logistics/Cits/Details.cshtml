@page
@model Service.Host.Pages.linnapps_ui.Logistics.Cits.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Cit</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cit.Code)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cit.Code)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cit.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cit.Name)
        </dd>
    </dl>
    @if (Model.Cit.Department != null)
    {
        <dl class="dl-horizontal">
            <dt>
                Department
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cit.Department.Description)
                &nbsp (
                @Html.DisplayFor(model => model.Cit.Department.DepartmentCode) 
                 )
            </dd>
        </dl>
    }
    @if (Model.Cit.CitLeader != null)
    {
        <dl class="dl-horizontal">
            <dt>
                CIT Leader
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cit.CitLeader.Name)
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cit.Code">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
